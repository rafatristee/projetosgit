print("\nMercado Dois Irmãos")

nomes = []
idades = []
cpfs = []

def cadastro_cliente():
    nome_cliente = input("\nDigite o nome do cliente:")
    idade_cliente = input("\nDigite a idade do cliente:")
    cpf_cliente = input("\nDigite o cpf do cliente:")
    nomes_append(nome_cliente)
    idades_append(idade_cliente)
    cpf_append(cpf_cliente)
    print("\nCliente cadastrado com sucesso!\n")
    print("Continuar a cadastrar outro cliente?\n")
    print("1.Sim")
    print("2.Não\n")
    novo_cliente = input("Selecione uma das opções:")
    if novo_cliente == "1":
        cadastro_cliente()
    if novo_cliente == "2":
        principal()
        
        
def remover_cliente():
    if nomes == []:
        print("\nLista vazia.")
        principal()
    else:
        contador = 0
        print("\nLISTA DE CLIENTES")
        for e1 in nomes:
            idade_X = idades[contador]
            cpf_X = cpfs[contador]
            dados_lista = str(contador) + "." + str(e1) + "; IDADE: " + \
                 str(idade_X) + " anos; CPF: " + str(cpf_X) + ";"
            print(dados_lista)
            contador = contador + 1
        remover_cliente = int(input("\nSelecione um cliente para remover:"))
        nomes.pop(remover_cliente)
        idades.pop(remover_cliente)
        cpfs.pop(remover_cliente)
        print("\nCliente removido com sucesso!")
    principal()
    
    
def lista():
    if nomes == []:
        print("\nLista vazia.")
        principal()
    else:
        contador = 0
        print("\nLISTA DE CLIENTES\n")
        for e1 in nomes:
            idade_X = idades[contador]
            cpf_X = cpfs[contador]
            dados_lista = "NOME: " + \
                str(e1) + "; IDADE: " + str(idade_X) + \
                " anos; CPF: " + str(cpf_X) + ";"
            print(dados_lista)
            contador = contador + 1
    principal()
    

def principal():
    print("\nBem vindo ao sistema de cadastro de clientes!")
    print("\n1.Cadastrar cliente")
    print("2.Descadastrar cliente")
    print("3.Ver lista completa")
    print("4.Encerrar atividade\n")
    resposta = input("Selecione uma das opções:")
    condicao(resposta)
    
    
def condicao(resposta):
    if resposta == "1":
        cadastro_cliente()
    if resposta == "2":
        remover_cliente()
    if resposta == "3":
        lista()
    if resposta == "4":
        print("\nAté a próxima! \nEncerrando programa...\n")
        
        
principal()
